  <div class="container-fluid" id="top-container">
    <h1 id="main-title" class="text-center">
      Encontre o emprego dos seus sonhos
    </h1>
    <p id="main-subtitle" class="text-center">
      Somos o site com mais vagas de tecnologia no mercado, direcionadas a home-office.
    </p>
    <form action="/" method="get" id="search-form" class="form-inline">
      <div class="form-group col-md-9">
        <input type="text" class="form-control" id="job" name="job"
          placeholder="Digite a vaga que está buscando"
        />
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-primary">
          Procurar
        </button>
      </div>
    </form>
  </div>

  <main>
    <div id="jobs-container" class="container">
      <div class="row">
        <div class="col-md-12">

          {{#if busca}}
            <h2 id="job-list-title">Buscando vagas que contêm: {{busca}} </h2>
          {{else}}
            <h2 id="job-list-title">Veja as novas vagas em destaque</h2>
          {{/if}}

          <ul id="job-list" class="list-group">
            {{#each jobs}}
              <li class="list-group-item {{#if this.dataValues.new_job}}new-job{{/if}}">
                <img src="/img/company.svg" alt="Foto da Empresa">
                <p>{{ this.dataValues.company }}</p>
                <h2>{{ this.dataValues.title }}</h2>
                <p>R$ {{ this.dataValues.salary }}</p>
                <span class="new-job-label">Nova</span>
                <a href="/jobs/details/{{ dataValues.id }}" class="btn btn-primary">Ver vaga</a>
              </li>
            {{/each}}
          </ul>
        </div>

      </div>
    </div>
  </main>